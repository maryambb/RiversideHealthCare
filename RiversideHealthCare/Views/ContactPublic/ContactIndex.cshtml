@model IEnumerable<RiversideHealthCare.Models.contact_list>

@{
    ViewBag.Title = "ContactIndex";
}

<div id="index-wrap">
    <div class="container">
        <table>
            <thead>
                <tr>
                    <th>Departments</th>

                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var x in Model)
                {
                    <tr>
                        <td>@x.department</td>
                        <td>
                            @Html.ActionLink("View Details", "ContactDetail", new { id = x.Id })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    </div>
    @section scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
