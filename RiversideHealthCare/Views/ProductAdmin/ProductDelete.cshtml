@model RiversideHealthCare.Models.Product

@{
    ViewBag.Title = "Delete gift";
    Layout = "~/Views/Shared/_LayoutCMS.cshtml";
}

<h2>Delete Product?</h2>

<h2>@Model.Name</h2>

@using (Html.BeginForm())
{
    <div>
        @Html.AntiForgeryToken()
        @*Confirm delete*@
        <input type="submit" value="Delete?" onclick="return confirm('Are you sure you want to delete this item?');" class="buttonstyle" />
        @Html.ActionLink("Back to list", "ProductIndex", new { ProductId = Model.ProductId }, new { @class = "buttonstyle" })
    </div>
}