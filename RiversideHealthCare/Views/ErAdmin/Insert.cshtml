@model RiversideHealthCare.Models.ERWaitQueue
@{
    ViewBag.Title = "Insert";
    Layout = "~/Views/Shared/_LayoutCMS.cshtml";
}

<h2>Insert</h2>
@*Paitents fill out a form to be inserted into the database*@
@using (Html.BeginForm())
{
    @Html.ValidationSummary()
    <label class="label"> First Name:</label>
    @Html.TextBoxFor(model => model.fName, new { @class = "textox" });

    <br />

    <label class="label"> Last Name:</label>
    @Html.TextBoxFor(model => model.lName, new { @class = "textbox" });

    <br />

    <label class="label"> Condition Between 1-3 (NOTE: 1 = little pain, 3 = lots of pain):</label>
    @Html.TextBoxFor(model => model.condition, new { @class = "textbox" });
    <br /><br />
    <input type="submit" value="Insert" />
}
<p> @Html.ActionLink("Back", "Index")</p>

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}