@model RiversideHealthCare.Models.LoginModel

@{
    ViewBag.Title = "Log in";
}

<div class="container">
    

    <section id="loginForm" style="margin-top:50px;">
        @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <hgroup class="title">
                <h1>@ViewBag.Title.</h1>
            </hgroup>
            <fieldset>
                <legend>Log in Form</legend>
                <ol>
                    <li>
                        @Html.LabelFor(m => m.UserName, new { @class = "label" })
                        @Html.TextBoxFor(m => m.UserName, new { @class = "logintextbox" })
                        @Html.ValidationMessageFor(m => m.UserName)
                    </li>
                    <li>
                        @Html.LabelFor(m => m.Password, new { @class = "label" })
                        @Html.PasswordFor(m => m.Password, new { @class = "logintextbox" })
                        @Html.ValidationMessageFor(m => m.Password)
                    </li>
                    <li>
                        @Html.CheckBoxFor(m => m.RememberMe)
                        @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })
                    </li>
                </ol>
                <input type="submit" value="Log in" class="buttonstyle" />
            </fieldset>
            <p>
                @Html.ActionLink("Register", "Register") if you don't have an account.
            </p>
        }
    </section>

    <section style="margin-top:80px;">
        <img src="~/Content/images/login_img.gif" />
    </section>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
