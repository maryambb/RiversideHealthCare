@model RiversideHealthCare.Models.doctor
@{
    ViewBag.Title = "DoctorDelete";
    Layout = "~/Views/Shared/_LayoutCMS.cshtml";
}

<h2>
    Deleting a doctor!
</h2>
<h4>Are you sure you want to delete dr.<em>@Model.first_name @Model.last_name?</em></h4>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div>
        @Html.TextBoxFor(model => model.user_name, new { style = "display: none;" })
        @Html.TextBoxFor(model => model.photo_path, new { style = "display: none;" })
        <input type="submit" value="Delete" class="buttonstyle" />
        <a href='@Url.Action("ListDoctor", "UserAdmin")'> <span class="buttonstyle">Back to list</span> </a>

    </div>
}




@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}